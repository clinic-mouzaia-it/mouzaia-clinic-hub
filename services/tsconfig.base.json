{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@clinic/shared": ["shared/dist/index"],
      "@clinic/shared/*": ["shared/dist/*"],
      "@shared/*": ["shared/dist/*"]
    }
  }
}
