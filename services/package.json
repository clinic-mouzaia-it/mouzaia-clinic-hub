    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "@clinic/shared": "file:shared"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.14.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6"
  },
  "overrides": {
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0"
  }
}
