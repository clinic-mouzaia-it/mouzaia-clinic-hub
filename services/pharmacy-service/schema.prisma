generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/@prisma/pharmacy-client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PHARMACY_DATABASE_URL")
}

model Medicine {
  id            String   @id @default(uuid()) @db.Uuid
  dci           String   @map("DCI")
  nomCommercial String   @map("nom_commercial")
  stock         Int      @default(0) @map("STOCK")
  ddp           String?  @map("DDP")
  lot           String?  @map("LOT")
  cout          Decimal  @map("COUT") @db.Decimal(10, 2)
  prixDeVente   Decimal  @map("PRIX_DE_VENTE") @db.Decimal(10, 2)
  deleted       Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("medicines")
}

model Distribution {
  id              String   @id @default(uuid()) @db.Uuid
  medicineId      String   @map("medicine_id") @db.Uuid
  medicineName    String   @map("medicine_name")
  quantity        Int      @default(1)
  staffUserId     String   @map("staff_user_id")
  staffUsername   String   @map("staff_username")
  staffNationalId String   @map("staff_national_id")
  staffFullName   String?  @map("staff_full_name")
  distributedBy   String   @map("distributed_by")
  distributedAt   DateTime @default(now()) @map("distributed_at")

  @@map("distributions")
}
