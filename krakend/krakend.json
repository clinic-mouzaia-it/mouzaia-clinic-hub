{
    "version": 3,
    "name": "Clinic Hub API Gateway",
    "port": 8080,
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "extra_config": {
        "security/cors": {
            "allow_origins": [
                "http://localhost:5173",
                "http://localhost:3000"
            ],
            "allow_methods": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE",
                "OPTIONS"
            ],
            "allow_headers": [
                "Origin",
                "Authorization",
                "Content-Type"
            ],
            "expose_headers": [
                "Content-Length",
                "Content-Type"
            ],
            "max_age": "12h",
            "allow_credentials": true
        }
    },
    "endpoints": [
        {
            "endpoint": "/health",
            "output_encoding": "no-op",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/health",
                    "host": [
                        "http://identity-service:4000"
                    ],
                    "encoding": "no-op"
                }
            ]
        },
        {
            "endpoint": "/authz-test",
            "output_encoding": "no-op",
            "method": "GET",
            "extra_config": {
                "auth/validator": {
                    "alg": "RS256",
                    "jwk_url": "http://keycloak:8080/realms/clinic-mouzaia-hub/protocol/openid-connect/certs",
                    "issuer": "http://hubkeycloak.mouzaiaclinic.local/realms/clinic-mouzaia-hub",
                    "roles_key": "resource_access.krakend-gateway.roles",
                    "roles_key_is_nested": true,
                    "roles": [
                        "api_user"
                    ],
                    "cache": true,
                    "operation_debug": true,
                    "disable_jwk_security": true
                }
            },
            "input_headers": [
                "Authorization"
            ],
            "backend": [
                {
                    "url_pattern": "/health",
                    "host": [
                        "http://identity-service:4000"
                    ],
                    "encoding": "no-op",
                    "extra_config": {
                        "modifier/response-body": {
                            "type": "inline",
                            "content": "{\"ok\":true,\"endpoint\":\"authz-test\"}"
                        }
                    }
                }
            ]
        },
